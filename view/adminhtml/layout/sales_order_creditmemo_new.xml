<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="submit_before">
            <block class="TIG\Buckaroo\Block\Adminhtml\Sales\Order\Creditmemo\Fee" name="buckaroo_fee_creditmemo" template="TIG_Buckaroo::sales/order/creditmemo/buckaroo_fee.phtml"/>
            <block class="TIG\Buckaroo\Block\Adminhtml\Sales\Order\Creditmemo\Create\BankFields" name="buckaroo.bankfields" template="TIG_Buckaroo::bankfields.phtml"/>
        </referenceContainer>
        <referenceBlock name="creditmemo_totals">
            <block class="Magento\Sales\Block\Adminhtml\Order\Totals\Item" name="reward_points" template="TIG_Buckaroo::sales/order/total.phtml">
                <action method="setBeforeCondition">
                    <argument name="condition" xsi:type="string">customerbalance</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
