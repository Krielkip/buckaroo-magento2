<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://schema.phpunit.de/4.1/phpunit.xsd"
         colors="true"
         bootstrap="Build/Magento 2/dev/tests/unit/framework/bootstrap.php"
        >
    <testsuite name="Magento Unit Tests">
        <directory suffix="Test.php">Build/Magento 2/vendor/tig/buckaroo/Test/Unit</directory>
    </testsuite>
    <php>
        <ini name="date.timezone" value="America/Los_Angeles"/>
        <ini name="xdebug.max_nesting_level" value="200"/>
    </php>
    <filter>
        <whitelist addUncoveredFilesFromWhiteList="true">
            <directory suffix=".php">Build/Magento 2/vendor/tig/buckaroo/</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-html" target="Build/Coverage" charset="UTF-8" yui="true" highlight="true"/>
        <log type="coverage-clover" target="Build/Logs/clover.xml"/>
    </logging>
</phpunit>